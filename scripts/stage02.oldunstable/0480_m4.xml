<llpackages>
	<package 
		name="m4"
		version="1.4.18"
		class="devel"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="63224a10becb5f527542b2e7baf2a1572666dbed">m4-1.4.18.tar.bz2</pkg>
				<mirror>http://ftp.gnu.org/gnu/m4/</mirror>
			</file>
			<manualcheck date="20170608" interval="365" page="http://ftp.gnu.org/gnu/m4/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/m4/">
					<atext linktext="m4-1.4.19." />
					<atext linktext="m4-1.4.20." />
					<atext linktext="m4-1.5." />
					<atext linktext="m4-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
			<dep>file</dep>
			<dep>zlib</dep>
			<dep>bzip2</dep>
			<dep>pkg-config</dep>
			<dep>ncurses</dep>
			<dep>attr</dep>
			<dep>acl</dep>
			<dep>libcap</dep>
                        <dep>sed</dep>
			<dep>shadow</dep>
			<dep>psmisc</dep>
			<dep>iana-etc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			
			cd ${PKGNAME}-${PKGVERSION}/
			sed -i 's/IO_ftrylockfile/IO_EOF_SEEN/' lib/*.c
			echo "#define _IO_IN_BACKUP 0x100" >> lib/stdio-impl.h
			
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --enable-threads && make
			]]>
		</build>
		<test>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
