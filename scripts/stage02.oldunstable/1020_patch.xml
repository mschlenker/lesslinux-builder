		<builddeps>
			<dep>bash</dep>
                        <dep>bison</dep>
			<dep>bc</dep>
			<dep>libtool</dep>
			<dep>gdbm</dep>
			<dep>gperf</dep>
			<dep>expat</dep>
			<dep>inetutils</dep>
                        <dep>p5-xml</dep>
                        <dep>perl</dep>
			<dep>intltool</dep>
			<dep>autoconf</dep>
                        <dep>automake</dep>
			<dep>xz</dep>
                        <dep>kmod</dep>
			<dep>gettext</dep>
			<dep>procps</dep>
			<!-- <dep>e2fsprogs</dep> -->
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>findutils</dep>
                        <dep>groff</dep>
			<dep>gzip</dep>
			<dep>less</dep>
			<dep>kbd</dep>
			<dep>make</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<!-- <patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cat  ${SRCDIR}/${PKGNAME}-${PKGVERSION}-test_fix-1.patch | patch -p1
			]]>
		</patch> -->
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr && make -j $jobcount
			]]>
		</build>
		<test>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
	</package>
</llpackages>
