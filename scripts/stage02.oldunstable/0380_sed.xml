<llpackages>
	<package 
		name="sed"
		version="4.7"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>    
				<pkg sha1="dbc842f6fdf538f366d97e7c4b4f241eaefd14a5">sed-4.7.tar.xz</pkg>
				<mirror>http://ftp.gnu.org/gnu/sed/</mirror>
			</file>
			<manualcheck date="20170608" interval="180" page="ftp://ftp.gnu.org/gnu/sed/" />
			<check>
				<page html="ftp://ftp.gnu.org/gnu/sed/">
					<atext linktext="sed-4.4.2." />
					<atext linktext="sed-4.4.3." />
					<atext linktext="sed-4.4.5." />
					<atext linktext="sed-4.4.6." />
					<atext linktext="sed-4.4.1." />
					<atext linktext="sed-4.5." />
					<atext linktext="sed-4.6." />
					<atext linktext="sed-5." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
			<dep>file</dep>
			<dep>zlib</dep>
			<dep>bzip2</dep>
			<dep>pkg-config</dep>
			<dep>ncurses</dep>
			<dep>attr</dep>
			<dep>acl</dep>
			<dep>libcap</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --bindir=/bin  && make
			make html
			]]>
		</build>
		<test>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
