<llpackages>
	<package 
		name="autoconf"
		version="2.69"
		class="devel"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>      
				<pkg sha1="e891c3193029775e83e0534ac0ee0c4c711f6d23">autoconf-2.69.tar.xz</pkg>
				<mirror>http://ftp.gnu.org/gnu/autoconf/</mirror>
			</file>
			<manualcheck date="20150823" interval="365" page="http://ftp.gnu.org/gnu/autoconf/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/autoconf/">
					<atext linktext="autoconf-2.72." />
					<atext linktext="autoconf-2.70." />
					<atext linktext="autoconf-2.71." />
					<atext linktext="autoconf-3." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>bison</dep>
			<dep>bc</dep>
			<dep>libtool</dep>
			<dep>gdbm</dep>
			<dep>gperf</dep>
			<dep>expat</dep>
			<dep>inetutils</dep>
                        <dep>p5-xml</dep>
                        <dep>perl</dep>
			<dep>intltool</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz | tar xf - 
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			sed '361 s/{/\\{/' -i bin/autoscan.in
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr && make -j $jobcount
			]]>
		</build>
		<test>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
