<llpackages>
	<package 
		name="iproute2"
		version="5.2.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="b5b3cc248ba6db3af3330129325c5507d02d9fd1">iproute2-5.2.0.tar.xz</pkg>
				<mirror>https://www.kernel.org/pub/linux/utils/net/iproute2/</mirror>
			</file>
			<manualcheck date="20170801" interval="90" page="https://www.kernel.org/pub/linux/utils/net/iproute2/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/utils/net/iproute2/">
					<atext linktext="iproute2-4.12.1" />
					<atext linktext="iproute2-4.12.2" />
					<atext linktext="iproute2-4.16" />
					<atext linktext="iproute2-4.13" />
					<atext linktext="iproute2-4.14" />
					<atext linktext="iproute2-4.15" />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>db</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>iptables</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<!-- <patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			sed -i 's/m_ipt.o//' tc/Makefile
			]]>
		</patch> -->
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			make  -j $jobcount 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
