                        <dep>perl</dep>
                        <dep>sed</dep>
			<!-- <dep>distcc</dep> -->
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<!-- <patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			# cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-fix_parallel_build-1.patch | patch -p1
			# cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-fix_pod_syntax-1.patch | patch -p1
			]]>
