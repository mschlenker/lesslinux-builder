					<atext linktext="flex-2.8." />
					<atext linktext="flex-3." />
					<atext linktext="flex-4." />
				</page>
			</check> -->
		</sources>
		<builddeps>
			<dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
			<dep>file</dep>
			<dep>zlib</dep>
			<dep>bzip2</dep>
			<dep>pkg-config</dep>
			<dep>ncurses</dep>
			<dep>attr</dep>
			<dep>acl</dep>
			<dep>libcap</dep>
                        <dep>sed</dep>
			<dep>shadow</dep>
			<dep>psmisc</dep>
			<dep>iana-etc</dep>
			<dep>m4</dep>
                        <dep>bison</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			cd ${PKGNAME}-${PKGVERSION}
			sed -i "/math.h/a #include <malloc.h>" src/flexdef.h
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			HELP2MAN=/tools/bin/true \
			./configure --prefix=/usr && make -j $jobcount
			]]>
		</build>
		<test>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			mkdir -p ${TGTDIR}/usr/lib
			mkdir -p ${TGTDIR}/usr/bin
			make install DESTDIR=${TGTDIR}
			ln -sv libfl.a ${TGTDIR}/usr/lib/libl.a
			ln -sv flex ${TGTDIR}/usr/bin/lex
			mkdir -pv ${TGTDIR}/usr/share/doc/${PKGNAME}-${PKGVERSION}
			cp    -v doc/flex.pdf ${TGTDIR}/usr/share/doc/${PKGNAME}-${PKGVERSION}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
