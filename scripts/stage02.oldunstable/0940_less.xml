<llpackages>
	<package 
		name="less"
		version="551"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                   
				<pkg sha1="7a2dbccd46697ba17189b1e19f75eee5115c19a2">less-551.tar.gz</pkg>
				<mirror>http://www.greenwoodsoftware.com/less/</mirror>
			</file>
			<manualcheck date="20170609" interval="180" page="http://www.greenwoodsoftware.com/less/" />
			<check>
				<page html="http://www.greenwoodsoftware.com/less/old.html">
					<atext linktext="news.488" />
					<atext linktext="news.489" />
					<atext linktext="news.49" />
					<atext linktext="news.5" />
					<atext linktext="news.6" />
					<atext linktext="news.7" />
					<atext linktext="news.8" />
					<atext linktext="news.9" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>bison</dep>
			<dep>bc</dep>
			<dep>libtool</dep>
			<dep>gdbm</dep>
			<dep>gperf</dep>
			<dep>expat</dep>
			<dep>inetutils</dep>
                        <dep>p5-xml</dep>
                        <dep>perl</dep>
			<dep>intltool</dep>
			<dep>autoconf</dep>
                        <dep>automake</dep>
			<dep>xz</dep>
                        <dep>kmod</dep>
			<dep>gettext</dep>
			<dep>procps</dep>
			<!-- <dep>e2fsprogs</dep> -->
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>findutils</dep>
                        <dep>groff</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc && make -j $jobcount
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
