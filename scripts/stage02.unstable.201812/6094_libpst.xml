<llpackages>
    <package name='libpst' version='0.6.72' install='destdir'>
        <license>
            unknown
        </license>
        <sources>
            <file>
                <pkg sha1='520b555de8efadc251ce4d81bdde65f402003b16'>
                    libpst-0.6.72.tar.gz
                </pkg>
                <mirror>
                    http://www.five-ten-sg.com/libpst/packages/
                </mirror>
            </file>
            <manualcheck date='20170615' interval='60' mirror='http://www.five-ten-sg.com/libpst/packages/'/>
        </sources>
	<builddeps>
                        <dep>ImageMagick</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libffi</dep>
                        <dep>libgsf</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>xz</dep>
			<dep>boost</dep>
			<dep>distcc</dep>
                </builddeps>
        <unpack>
            <![CDATA[tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
]]>
        </unpack>
        <patch/>
        <build>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
	    jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --enable-libpst-shared --enable-python 
make -j $jobcount 
]]>
        </build>
        <install>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
make install DESTDIR=$TGTDIR
]]>
        </install>
        <clean>
            <![CDATA[rm -rf ${PKGNAME}-${PKGVERSION}
]]>
        </clean>
    </package>
</llpackages>