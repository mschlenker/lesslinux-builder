<llpackages>
	<package 
		name="kexec-tools"
		version="2.0.17"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>           
				<pkg sha1="8936b2e0eea3334c656a0004d514ed9795691393">kexec-tools-2.0.17.tar.xz</pkg>
				<mirror>https://www.kernel.org/pub/linux/utils/kernel/kexec/</mirror>
			</file>
			<manualcheck date="20170801" interval="90" page="https://www.kernel.org/pub/linux/utils/kernel/kexec/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/utils/kernel/kexec/">
					<atext linktext="kexec-tools-2.0.18." />
					<atext linktext="kexec-tools-2.0.16." />
					<atext linktext="kexec-tools-2.0.17." />
					<atext linktext="kexec-tools-2.1." />
					<atext linktext="kexec-tools-2.2." />
					<atext linktext="kexec-tools-3." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xz</dep>
                        <dep>zlib</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc 
			make -j $jobcount
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
	</package>
</llpackages>
