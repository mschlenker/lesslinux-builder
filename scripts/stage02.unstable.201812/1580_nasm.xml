<llpackages>
	<package 
		name="nasm"
		version="2.13.03"
		class="devel">
		<license>GPLv2</license>
		<sources>            
			<file>                                                                                               
				<pkg sha1="1338ae8832bdbabd00a2b7ee3e39b8fd2f923ea0">nasm-2.13.03.tar.xz</pkg>
				<mirror>http://www.nasm.us/pub/nasm/releasebuilds/2.13.03/</mirror>
			</file>
			<manualcheck date="20170609" interval="90" page="http://www.nasm.us/pub/nasm/releasebuilds/" />
			<check>
				<page html="http://www.nasm.us/pub/nasm/releasebuilds/">
					<atext linktext="2.13.02" />
					<atext linktext="2.13.03" />
					<atext linktext="2.13.04" />
					<atext linktext="2.13.05" />
					<atext linktext="2.17." />
					<atext linktext="2.14." />
					<atext linktext="2.15." />
					<atext linktext="2.16." />
				</page>
			</check> 
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>groff</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz | tar xf - 
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			sed -e '/seg_init/d'                      \
				-e 's/pure_func seg_alloc/seg_alloc/' \
				-i include/nasmlib.h
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
