<llpackages>
	<package 
		name="tar"
		version="1.30"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                              
				<pkg sha1="f56e89603eca86c3571f3cb40a34057ecd1e1086">tar-1.30.tar.bz2</pkg>
				<mirror>http://ftp.gnu.org/gnu/tar/</mirror>
			</file>
			<manualcheck date="20160630" interval="180" page="http://ftp.gnu.org/gnu/tar/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/tar/">
					<atext linktext="tar-1.29.1." />
					<atext linktext="tar-1.30." />
					<atext linktext="tar-1.31." />
					<atext linktext="tar-1.32." />
					<atext linktext="tar-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			export FORCE_UNSAFE_CONFIGURE=1
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --bindir=/bin --libexecdir=/usr/sbin && make -j $jobcount
			]]>
		</build>
		<test>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
