<llpackages>
	<package 
		name="libXrandr"
		version="1.4.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                  
				<pkg sha1="00865ccefe1040e4d9866d878556710cdc4b2ae6">libXrandr-1.4.2.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/lib/</mirror>
			</file>
			<manualcheck date="20140802" interval="180" page="http://xorg.freedesktop.org/archive/individual/lib/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/lib/">
					<atext linktext="libXrandr-1.4.5." />
					<atext linktext="libXrandr-1.4.6." />
					<atext linktext="libXrandr-1.4.3." />
					<atext linktext="libXrandr-1.4.4." />
					<atext linktext="libXrandr-1.5." />
					<atext linktext="libXrandr-1.6." />
					<atext linktext="libXrandr-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXext</dep>
                        <dep>libXrender</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr 
				make  
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
	</package>
</llpackages>
