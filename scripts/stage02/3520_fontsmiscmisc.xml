<llpackages>
	<package 
		name="font-misc-misc"
		version="1.1.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>  
				<!-- is latest -->                                             
				<pkg sha1="c6d28c56880807963175cbbd682fb6f75a35f77d">font-misc-misc-1.1.2.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/font/</mirror>
			</file>
			<manualcheck date="20140802" interval="365" page="http://xorg.freedesktop.org/archive/individual/font/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/font/">
					<atext linktext="font-misc-misc-1.1.3." />
					<atext linktext="font-misc-misc-1.1.4." />
					<atext linktext="font-misc-misc-1.2." />
					<atext linktext="font-misc-misc-1.3." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>bdftopcf</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>font-util</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gzip</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>mkfontdir</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<!-- soft -->
			 <dep>fontconfig</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
