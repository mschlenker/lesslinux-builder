		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}_${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}_${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}_${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}_${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
			fi
			sh bootstrap.sh --prefix=/usr
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				sed -i 's%# using gcc ;%using gcc \: \: /usr/bin/distcc g++ ;%g' tools/build/v2/user-config.jam
				pump ./bjam -a -j $jobcount --debug-configuration
			else
				./b2 -a
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}_${PKGVERSION}
			./b2 install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}_${PKGVERSION}
			]]>
