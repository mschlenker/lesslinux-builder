<llpackages>
	<package 
		name="wireless_tools"
		version="30.pre9"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>  
				<pkg sha1="41db5ced9ed3d8d3cc104ce43c19af1d72f07eec">wireless_tools.30.pre9.tar.gz</pkg>
				<mirror>http://www.hpl.hp.com/personal/Jean_Tourrilhes/Linux/</mirror>
			</file>
			<manualcheck date="20140802" interval="365" page="http://www.hpl.hp.com/personal/Jean_Tourrilhes/Linux/Tools.html" />
			<check>
				<page html="http://www.hpl.hp.com/personal/Jean_Tourrilhes/Linux/Tools.html">
					<atext linktext="version 30" />
					<atext linktext="version 31" />
					<atext linktext="version 32" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}.${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}.${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}.${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}.30
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				pump make -j $jobcount PREFIX=/usr CC="distcc gcc" CXX="distcc g++" 
			else
				make PREFIX=/usr
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}.30
			make PREFIX=/usr install
			]]>
		</install>
	</package>
</llpackages>
