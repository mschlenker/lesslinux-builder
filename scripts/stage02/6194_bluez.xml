<llpackages>
    <package name='bluez' version='5.46' install='destdir'>
        <license>
            unknown
        </license>
        <sources>
            <file>
                <pkg sha1='e6a811cd125fee387044f371b15ac4c72dbc0187'>
                    bluez-5.46.tar.xz
                </pkg>
                <mirror>
                    http://www.kernel.org/pub/linux/bluetooth/
                </mirror>
            </file>
	     <file>
                <pkg sha1='299cd9ca06f3f7eb11ac56aa38abfc9bcda456af'>
                    bluez-5.46-obexd_without_systemd-1.patch
                </pkg>
                <mirror>
                    http://www.linuxfromscratch.org/patches/blfs/svn/
                </mirror>
            </file>
            <manualcheck date='20170801' interval='60' mirror='http://www.kernel.org/pub/linux/bluetooth/'/>
        </sources>
	<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>icu</dep>
                        <dep>inetutils</dep>
                        <dep>libical</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                        <dep>udev</dep>
                </builddeps>
        <unpack>
            <![CDATA[tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
]]>
        </unpack>
        <patch>
		<![CDATA[cd ${PKGNAME}-${PKGVERSION}
		cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-obexd_without_systemd-1.patch | patch -p1 
]]>
	</patch>
        <build>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --enable-library --disable-systemd --disable-client
make
]]>
        </build>
        <install>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
make install DESTDIR=${TGTDIR}
mkdir -p ${TGTDIR}/usr/sbin
mkdir -p ${TGTDIR}/etc/bluetooth
ln -svf ../libexec/bluetooth/bluetoothd ${TGTDIR}/usr/sbin

cat > ${TGTDIR}/etc/bluetooth/rfcomm.conf << "EOF"
# Start rfcomm.conf
# Set up the RFCOMM configuration of the Bluetooth subsystem in the Linux kernel.
# Use one line per command
# See the rfcomm man page for options


# End of rfcomm.conf
EOF

cat > /etc/bluetooth/uart.conf << "EOF"
# Start uart.conf
# Attach serial devices via UART HCI to BlueZ stack
# Use one line per device
# See the hciattach man page for options

# End of uart.conf
EOF




]]>
        </install>
        <clean>
            <![CDATA[rm -rf ${PKGNAME}-${PKGVERSION}
]]>
        </clean>
    </package>
</llpackages>