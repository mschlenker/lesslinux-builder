<llpackages>
	<package 
		name="libidn"
		version="1.33"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                    
				<pkg sha1="57872fdc665dcc585e16f4ac0bb35374b1103f7e">libidn-1.33.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/gnu/libidn/</mirror>
			</file>
			<manualcheck date="20160823" interval="180" page="ftp://ftp.gnu.org/gnu/libidn/" />
			<check>
				<page html="ftp://ftp.gnu.org/gnu/libidn/">
					<atext linktext="libidn-1.34." />
					<atext linktext="libidn-1.35." />
					<atext linktext="libidn-1.36." />
					<atext linktext="libidn-1.37." />
					<atext linktext="libidn-1.38." />
					<atext linktext="libidn-2." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gzip</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc && make -j $jobcount
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
