<llpackages>
	<package 
		name="gawk"
		version="4.1.1"
		class="user"
		install="destdir"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                                                                        
				<pkg sha1="547feb48d20e923aff58daccee97c94e047fdc18">gawk-4.1.1.tar.xz</pkg>
				<mirror>http://ftp.gnu.org/gnu/gawk/</mirror>
			</file>
			<manualcheck date="20140517" interval="180" page="http://ftp.gnu.org/gnu/gawk/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/gawk/">
					<atext linktext="gawk-4.1.3." />
					<atext linktext="gawk-4.1.2." />
					<atext linktext="gawk-4.2." />
					<atext linktext="gawk-4.3." />
					<atext linktext="gawk-5." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz | tar xf -
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --libexecdir=/usr/lib && make
			]]>
		</build>
		<test>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			mkdir -vp ${TGTDIR}/usr/share/doc/${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			cp -v doc/{awkforai.txt,*.{eps,pdf,jpg}} ${TGTDIR}/usr/share/doc/${PKGNAME}-${PKGVERSION}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
