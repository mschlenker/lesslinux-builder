<llpackages>
	<package 
		name="libgnome"
		version="2.32.1"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                       
				<pkg sha1="a6bc277ff90ca2f83b91c5bc5222f03ab553a52b">libgnome-2.32.1.tar.bz2</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/libgnome/2.32/</mirror>
			</file>
			<file>                       
				<pkg sha1="56d6f486850ebd31f9fbc70c25967a1f647ee0ec">libgnome-2.32.1-patch01.diff</pkg>
				<mirror>http://distfiles.lesslinux.org/</mirror>
			</file>
			<manualcheck date="20140724" interval="180" page="ftp://ftp2.nluug.nl/pub/windowing/gnome/sources/libgnome/" />
			<check>
				<page html="ftp://ftp2.nluug.nl/pub/windowing/gnome/sources/libgnome/2.32/">
					<atext linktext="libgnome-2.32.2." />
					<atext linktext="libgnome-2.32.3." />
					<atext linktext="libgnome-2.32.4." />
					<atext linktext="libgnome-2.32.5." />
					<atext linktext="libgnome-2.32.6." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>GConf</dep>
			<dep>GConf2</dep>
                        <dep>ORBit2</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>dbus-glib</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gnome-vfs</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>intltool</dep>
                        <dep>libbonobo</dep>
                        <dep>libcanberra</dep>
                        <dep>libogg</dep>
                        <dep>libtool</dep>
                        <dep>libvorbis</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>p5-xml</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>popt</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-patch01.diff | patch -p1
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			export PKG_CONFIG_PATH=/usr/compat.old/lib/pkgconfig
			export PATH=$PATH:/usr/compat.old/bin:/usr/compat.old/sbin
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
				./configure --prefix=/usr/compat.old --sysconfdir=/etc/compat.old --enable-esd=no
				pump make -j $jobcount
			else
				./configure --prefix=/usr/compat.old --sysconfdir=/etc/compat.old --enable-esd=no
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
