	<package 
		name="fontconfig"
		version="2.11.1"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>    	  	  		
				<pkg sha1="08565feea5a4e6375f9d8a7435dac04e52620ff2">fontconfig-2.11.1.tar.bz2</pkg>
				<mirror>http://fontconfig.org/release/</mirror>
			</file>
			<manualcheck date="20140802" interval="180" page="http://fontconfig.org/release/" />
