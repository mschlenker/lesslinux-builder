<llpackages>
	<package 
		name="giblib"
		version="1.2.4"
		class="user">
		<license>GPLv2</license>
		<sources>
			<file> 
				<pkg sha1="342e6f7882c67d2277e1765299e1be5078329ab0">giblib-1.2.4.tar.gz</pkg>
				<mirror>http://linuxbrit.co.uk/downloads/</mirror>
			</file>
			<manualcheck date="20150823" interval="365" page="http://linuxbrit.co.uk/downloads/" />
			<check>
				<page html="http://linuxbrit.co.uk/downloads/">
					<atext linktext="giblib-1.2.5.tar.gz" />
					<atext linktext="giblib-1.2.6.tar.gz" />
					<atext linktext="giblib-1.2.7.tar.gz" />
					<atext linktext="giblib-1.3.tar.gz" />
					<atext linktext="giblib-1.3.0.tar.gz" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>autoconf</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>freetype</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
			<dep>giflib</dep>
                        <dep>grep</dep>
                        <dep>imlib2</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXext</dep>
                        <dep>libxcb</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>texinfo</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<dep>xmlto</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
