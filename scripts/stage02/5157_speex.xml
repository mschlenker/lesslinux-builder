<llpackages>
	<package 
		name="speex"
		version="1.2rc2"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>         
				<pkg sha1="03ce8418c4e05cb166374bfadef46e7646da62e1">speex-1.2rc2.tar.gz</pkg>
				<mirror>http://downloads.xiph.org/releases/speex/</mirror>
			</file>
			<manualcheck date="20150530" interval="180" page="http://downloads.xiph.org/releases/speex/" />
			<check>
				<page html="http://downloads.xiph.org/releases/speex/">
					<atext linktext="speex-1.2rc3." />
					<atext linktext="speex-1.2rc4." />
					<atext linktext="speex-1.2rc5." />
					<atext linktext="speex-1.2rc6." />
					<atext linktext="speex-1.2." />
					<atext linktext="speex-1.3" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libogg</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
