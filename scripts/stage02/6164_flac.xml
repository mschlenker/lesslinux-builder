<llpackages>
    <package name='flac' version='1.3.1' install='destdir'>
        <license>
            unknown
        </license>
        <sources>
            <file>
                <pkg sha1='38e17439d11be26207e4af0ff50973815694b26f'>
                    flac-1.3.1.tar.xz
                </pkg>
                <mirror>
                    http://downloads.xiph.org/releases/flac/
                </mirror>
            </file>
            <manualcheck date='20160924' interval='60' mirror='http://downloads.xiph.org/releases/flac/'/>
        </sources>
	<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>doxygen</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libogg</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>nasm</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                </builddeps>
        <unpack>
            <![CDATA[tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
]]>
        </unpack>
        <patch/>
        <build>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-thorough-tests
			make -j $jobcount 
]]>
        </build>
        <install>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
make install DESTDIR=${TGTDIR}
]]>
        </install>
        <clean>
            <![CDATA[rm -rf ${PKGNAME}-${PKGVERSION}
]]>
        </clean>
    </package>
</llpackages>