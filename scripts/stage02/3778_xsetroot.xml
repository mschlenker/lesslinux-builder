<llpackages>
	<package 
		name="xsetroot"
		version="1.1.1"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                               
				<pkg sha1="63bfcf55e95553df1e28f538bf009883568115d1">xsetroot-1.1.1.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/app/</mirror>
			</file>
			<manualcheck date="20140802" interval="365" page="http://xorg.freedesktop.org/archive/individual/app/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/app/">
					<atext linktext="xsetroot-1.1.5." />
					<atext linktext="xsetroot-1.1.2." />
					<atext linktext="xsetroot-1.1.3." />
					<atext linktext="xsetroot-1.1.4." />
					<atext linktext="xsetroot-1.2." />
					<atext linktext="xsetroot-1.3." />
					<atext linktext="xsetroot-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXmu</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xbitmaps</dep>
                        <dep>xproto-base</dep>
			<dep>libXcursor</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
