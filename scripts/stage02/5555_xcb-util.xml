<llpackages>
	<package 
		name="xcb-util"
		version="0.4.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>	
			<file>
				<pkg sha1='7f2e9b7efcc2c34eb1d6ae312c3d73b075832e46'>xcb-util-0.4.0.tar.bz2</pkg>
				<mirror>http://xcb.freedesktop.org/dist/</mirror>
			</file>
			<manualcheck date='20150619' interval='60' mirror='http://xcb.freedesktop.org/dist/'/>
			<check>
				<page html="http://xcb.freedesktop.org/dist/">
					<atext linktext="xcb-util-0.4.1." />
					<atext linktext="xcb-util-0.4.2." />
					<atext linktext="xcb-util-0.4.3." />
					<atext linktext="xcb-util-0.4.4." />
					<atext linktext="xcb-util-0.5." />
					<atext linktext="xcb-util-0.6." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>gperf</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libXau</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf  ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
