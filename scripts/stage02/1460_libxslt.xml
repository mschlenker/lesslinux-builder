<llpackages>
	<package 
		name="libxslt"
		version="1.1.28"
		class="devel"
		install="destdir">
	<license>GPLv2</license>
		<sources>
			<file>     
				<pkg sha1="4df177de629b2653db322bfb891afa3c0d1fa221">libxslt-1.1.28.tar.gz</pkg>
				<mirror>ftp://xmlsoft.org/libxml2/</mirror>
			</file>
			<manualcheck date="20140802" interval="365" page="ftp://xmlsoft.org/libxml2/" />
		</sources>
		<builddeps>
			<dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libgcrypt</dep>
                        <dep>libgpg-error</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                        <dep>util-linux-ng</dep>
			<!-- <dep>distcc</dep> -->
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] && which pump ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
