		<build>
			<![CDATA[
			cd GConf-${PKGVERSION}
			export PKG_CONFIG_PATH=/usr/compat.new/lib/pkgconfig
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc/compat.new --prefix=/usr/compat.new  CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc/compat.new --prefix=/usr/compat.new
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd GConf-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			paxctl -m ${TGTDIR}/usr/compat.new/bin/gconftool*
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf GConf-${PKGVERSION}
			]]>
