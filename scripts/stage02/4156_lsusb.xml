<llpackages>
	<package 
		name="usbutils"
		version="007"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>               
				<pkg sha1="2aa78ca39c10bfedda99a8263785a06d00e38f12">usbutils-007.tar.xz</pkg>
				<mirror>http://ftp.kernel.org/pub/linux/utils/usb/usbutils/</mirror>
			</file>
			<!-- <file>      
				<pkg sha1="23b7d419774b3fc948b2b87c2ae29e5215bffe43">usbids-20100516.txt</pkg>
				<mirror>http://distfiles.lesslinux.org/</mirror>
			</file> -->
			<manualcheck date="20140802" interval="180" page="http://ftp.kernel.org/pub/linux/utils/usb/usbutils/" />
			<check>
				<page html="rsync://ftp.kernel.org/pub/linux/utils/usb/usbutils/">
					<atext linktext="usbutils-008" />
					<atext linktext="usbutils-009" />
					<atext linktext="usbutils-07" />
					<atext linktext="usbutils-01" />
					<atext linktext="usbutils-02" />
					<atext linktext="usbutils-03" />
					<atext linktext="usbutils-04" />
					<atext linktext="usbutils-05" />
					<atext linktext="usbutils-06" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gzip</dep>
                        <dep>inetutils</dep>
                        <dep>libusb</dep><dep>libusb-compat</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			ln -sf ../bin/lsusb ${TGTDIR}/usr/sbin/lsusb 
			# install -m 0644 ${SRCDIR}/usbids-20100516.txt /var/lib/misc/usb.ids
			# install -m 0644 ${SRCDIR}/usbids-20100516.txt /usr/share/usb.ids
			# gzip -c ${SRCDIR}/usbids-20100516.txt > /usr/share/usb.ids.gz
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
