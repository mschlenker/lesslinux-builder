<llpackages>
    <package name='confuse' version='2.7' install='destdir'>
        <license>
            unknown
        </license>
        <sources>
            <file>
                <pkg sha1='b3f74f9763e6c9012476dbd323d083af4be34cad'>
                    confuse-2.7.tar.gz
                </pkg>
                <mirror>
                    http://download.savannah.gnu.org/releases/confuse/
                </mirror>
            </file>
            <manualcheck date='20150823' interval='180' mirror='http://download.savannah.gnu.org/releases/confuse/'/>
        </sources>
	<builddeps>
			<dep>pkg-config</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>flex</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
	</builddeps>
        <unpack>
            <![CDATA[tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
]]>
        </unpack>
        <patch/>
        <build>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
make
]]>
        </build>
        <install>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
make install DESTDIR=${TGTDIR} 
]]>
        </install>
        <clean>
            <![CDATA[rm -rf ${PKGNAME}-${PKGVERSION}
]]>
        </clean>
    </package>
</llpackages>