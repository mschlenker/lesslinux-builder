<llpackages>
	<package 
		name="xkbcomp"
		version="1.2.4"
		class="user"
		install="destdir"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                                            
				<pkg sha1="695d2f2824884d9e54aa1419282ae167fdea163b">xkbcomp-1.2.4.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/app/</mirror>
			</file>
			<manualcheck date="20140802" interval="180" page="http://xorg.freedesktop.org/archive/individual/app/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/app/">
					<atext linktext="xkbcomp-1.2.8." />
					<atext linktext="xkbcomp-1.2.5." />
					<atext linktext="xkbcomp-1.2.6." />
					<atext linktext="xkbcomp-1.2.7." />
					<atext linktext="xkbcomp-1.3." />
					<atext linktext="xkbcomp-1.4." />
					<atext linktext="xkbcomp-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>libxkbfile</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
	</package>
</llpackages>
