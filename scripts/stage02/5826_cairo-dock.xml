		<builddeps>
                        <dep>Mesa</dep><dep>glu</dep>
                        <dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>curl</dep>
                        <dep>dbus-glib</dep>
                        <dep>dbus</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gtk</dep>
			<dep>gtk3</dep>
                        <dep>gtkglext</dep>
                        <dep>gzip</dep>
                        <dep>libX11</dep>
                        <dep>libXext</dep>
                        <dep>libXrender</dep>
			<dep>libXrandr</dep>
                        <dep>librsvg</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>pango</dep><dep>pangox-compat</dep>
                        <dep>pkg-config</dep>
                        <dep>xproto-base</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			mkdir build ; cd build
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
			fi
			cmake .. -DCMAKE_INSTALL_PREFIX=/usr
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				pump make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}/build
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			  <![CDATA[
			  
			  rm -rf ${PKGNAME}-${PKGVERSION}
			  
			  ]]>
		</clean>
	</package>
</llpackages>
