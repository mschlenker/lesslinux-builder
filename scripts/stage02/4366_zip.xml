<llpackages>
	<package 
		name="zip"
		version="3.0"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>
				<pkg sha1="c9f4099ecf2772b53c2dd4a8e508064ce015d182">zip30.tar.gz</pkg>
				<mirror>http://dfn.dl.sourceforge.net/sourceforge/infozip/</mirror>
			</file>
			<manualcheck date="20140802" interval="365" page="http://dfn.dl.sourceforge.net/sourceforge/infozip/" />
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bzip2</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/zip30.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd zip30
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				pump make -j $jobcount -f unix/Makefile generic_gcc CC="distcc gcc" CXX="distcc g++" 
			else
				make -f unix/Makefile generic_gcc
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd zip30
			make prefix=/usr -f unix/Makefile install

			]]>
		</install>
	</package>
</llpackages>
