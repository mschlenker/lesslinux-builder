<llpackages>
	<package 
		name="gnupg"
		version="1.4.23"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>            
				<pkg sha1="13747486ed5ff707f796f34f50f4c3085c3a6875">gnupg-1.4.23.tar.bz2</pkg>
				<mirror>https://gnupg.org/ftp/gcrypt/gnupg/</mirror>
			</file>
			<manualcheck date="20170801" interval="90" page="ftp://ftp.gnupg.org/gcrypt/gnupg/" />
			<check>
				<page html="ftp://ftp.gnupg.org/gcrypt/gnupg/">
					<atext linktext="gnupg-1.4.23." />
					<atext linktext="gnupg-1.4.24." />
					<atext linktext="gnupg-1.4.25." />
					<atext linktext="gnupg-1.4.26." />
					<atext linktext="gnupg-1.4.27." />
					<atext linktext="gnupg-1.4.28." />
					<atext linktext="gnupg-2.0.27." />
					<atext linktext="gnupg-2.0.28." />
					<atext linktext="gnupg-2.0.29." />
					<atext linktext="gnupg-2.0.30." />
					<atext linktext="gnupg-2.1.3." />
					<atext linktext="gnupg-2.1.4." />
					<atext linktext="gnupg-2.1.5." />
					<atext linktext="gnupg-2.2." />
					<atext linktext="gnupg-2.3." />
					<atext linktext="gnupg-3." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>bzip2</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libusb</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<!-- soft -->
			 <dep>curl</dep>
			 <dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
				./configure --prefix=/usr --sysconfdir=/etc
				make -j $jobcount
			else
				./configure --prefix=/usr --sysconfdir=/etc
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
