<llpackages>
	<package 
		name="libunique"
		version="1.1.6"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                   
				<pkg sha1="d44ad06503efaaa0c660c5f8a817e90fbe254d1f">libunique-1.1.6.tar.bz2</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/libunique/1.1/</mirror>
			</file>
			<file>                   
				<pkg sha1="245d47fab38706c1b0a4096686ea8b1d7493c548">libunique-1.1.6-upstream_fixes-1.patch</pkg>
				<mirror>https://www.linuxfromscratch.org/patches/blfs/svn</mirror>
			</file>
			<manualcheck date="20150823" interval="365" page="http://ftp2.nluug.nl/windowing/gnome/sources/libunique/" />
		</sources>
		<builddeps>
			<dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>coreutils</dep>
                        <dep>dbus-glib</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gtk3</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXrender</dep>
                        <dep>libpng16</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>libxml2</dep>
                        <dep>make</dep>
                        <dep>pango</dep>
                        <dep>pixman</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<!-- soft -->
			 <dep>imake</dep>
			 <dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			tar xzf ${SRCDIR}/${PKGNAME}_${PKGVERSION}-4.debian.tar.gz
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			patch -Np1 -i ${SRCDIR}/libunique-1.1.6-upstream_fixes-1.patch
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
			fi
			./configure --prefix=/usr --sysconfdir=/etc 
			find . -type f -name Makefile -exec sed -i 's%-Werror%%g' {} \;
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
	</package>
</llpackages>
