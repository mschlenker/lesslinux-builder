<llpackages>
	<package 
		name="imlib2"
		version="1.7.5"
		class="user" install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                           
				<pkg sha1="e819f81f5822c8f41efc8887c4a502c1c0f44995">imlib2-1.7.5.tar.xz</pkg>
				<mirror>https://downloads.sourceforge.net/enlightenment/</mirror>
			</file>
			<manualcheck date="20170615" interval="120" page="http://sourceforge.net/projects/enlightenment/files/" />
			<check>
				<page html="http://sourceforge.net/projects/enlightenment/files/">
					<atext linktext="imlib2-1.4.11." />
					<atext linktext="imlib2-1.4.12." />
					<atext linktext="imlib2-1.4.13." />
					<atext linktext="imlib2-1.5." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bzip2</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>jpegsrc</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXext</dep>
                        <dep>libpng16</dep>
                        <dep>libxcb</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>tiff</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
                        <dep>zlib</dep>
			<!-- soft -->
			 <dep>imake</dep>
			 <!-- <dep>giflib</dep> -->
			 <dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			export CFLAGS="-fPIC"
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr --disable-static   CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr  --disable-static
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make DESTDIR=${TGTDIR} install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
