<llpackages>
	<package 
		name="enchant"
		version="1.6.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                    
				<pkg sha1="321f9cf0abfa1937401676ce60976d8779c39536">enchant-1.6.0.tar.gz</pkg>
				<mirror>http://www.abisource.com/downloads/enchant/1.6.0/</mirror>
			</file>
			<manualcheck date="20140724" interval="180" page="http://www.abisource.com/downloads/enchant/" />
			<check>
				<page html="http://www.abisource.com/downloads/enchant/">
					<atext linktext="1.6.1" />
					<atext linktext="1.6.2" />
					<atext linktext="1.7" />
					<atext linktext="1.8" />
					<atext linktext="2.0" />
				</page>
			</check>
		</sources> 
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>dbus-glib</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                </builddeps> 
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=$TGTDIR
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf  ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
