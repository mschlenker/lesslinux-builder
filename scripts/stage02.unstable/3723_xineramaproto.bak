<llpackages>
	<package 
		name="xineramaproto"
		version="1.2.1"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                  
				<pkg sha1="818bffc16139d6e3de4344c83f00c495d3536753">xineramaproto-1.2.1.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/proto/</mirror>
			</file>
			<manualcheck date="20150823" interval="365" page="http://xorg.freedesktop.org/archive/individual/proto/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/proto/">
					<atext linktext="xineramaproto-1.2.2." />
					<atext linktext="xineramaproto-1.2.3." />
					<atext linktext="xineramaproto-1.3." />
					<atext linktext="xineramaproto-1.4." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
	</package>
</llpackages>
