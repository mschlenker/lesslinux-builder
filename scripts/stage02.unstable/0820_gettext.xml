<llpackages>
	<package 
		name="gettext"
		version="0.19.8.1"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>    
				<pkg sha1="b5d24ba2958c91fc5cc0058165837c99a0f58784">gettext-0.19.8.1.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/gnu/gettext/</mirror>
			</file>
			<manualcheck date="20160630" interval="90" page="http://ftp.gnu.org/gnu/gettext/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/gettext/">
					<atext linktext="gettext-0.19.9." />
					<atext linktext="gettext-0.19.10." />
					<atext linktext="gettext-0.19.11." />
					<atext linktext="gettext-0.20." />
					<atext linktext="gettext-0.21." />
					<atext linktext="gettext-1." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>bison</dep>
			<dep>bc</dep>
			<dep>libtool</dep>
			<dep>gdbm</dep>
			<dep>gperf</dep>
			<dep>expat</dep>
			<dep>inetutils</dep>
                        <dep>p5-xml</dep>
                        <dep>perl</dep>
			<dep>intltool</dep>
			<dep>autoconf</dep>
                        <dep>automake</dep>
			<dep>xz</dep>
                        <dep>kmod</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			
			cd ${PKGNAME}-${PKGVERSION}/
			sed -i '/^TESTS =/d' gettext-runtime/tests/Makefile.in &&
			sed -i 's/test-lock..EXEEXT.//' gettext-tools/gnulib-tests/Makefile.in
			sed -e '/AppData/{N;N;p;s/\.appdata\./.metainfo./}' \
				-i gettext-tools/its/appdata.loc
			
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			EMACS="no" ./configure --prefix=/usr --docdir=/usr/share/doc/${PKGNAME}-${PKGVERSION} && make -j $jobcount
			]]>
		</build>
		<test>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			chmod -v 0755 ${TGTDIR}/usr/lib/preloadable_libintl.so
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
