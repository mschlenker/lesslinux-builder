		name="gtk"
		version="2.24.24"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                   
				<pkg sha1="c43eb248b3d30c6b49937692b4c4bfa10b96201e">gtk+-2.24.24.tar.xz</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/gtk+/2.24</mirror>
			</file>
			<manualcheck date="20140802" interval="180" page="http://ftp2.nluug.nl/windowing/gnome/sources/gtk+/" />
			<check>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/gtk+/2.24/">
					<atext linktext="gtk+-2.24.27." />
					<atext linktext="gtk+-2.24.25." />
					<atext linktext="gtk+-2.24.26." />
				</page>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/gtk+/">
					<atext linktext="2.26" />
					<atext linktext="2.28" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>Python</dep>
                        <dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>compositeproto</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>gettext</dep>
                        <dep>gir-repository</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gobject-introspection</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXcomposite</dep>
                        <dep>libXdamage</dep>
                        <dep>libXext</dep>
                        <dep>libXfixes</dep>
                        <dep>libXrandr</dep>
                        <dep>libXrender</dep>
                        <dep>libffi</dep>
                        <dep>libpng12</dep><dep>libpng14</dep><dep>libpng15</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pango</dep><dep>pangox-compat</dep>
                        <dep>perl</dep>
                        <dep>pixman</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/${PKGNAME}+-${PKGVERSION}.tar.xz | tar xf - 
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}+-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr --without-libjasper CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr --without-libjasper
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}+-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}+-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
