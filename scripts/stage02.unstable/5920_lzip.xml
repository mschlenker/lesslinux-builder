<llpackages>
	<package 
		name="lzip"
		version="1.18"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                        
				<pkg sha1="ef42f3209d02c3b3c217a61c8f127bcb8747b128">lzip-1.18.tar.gz</pkg>
				<mirror>http://download.savannah.gnu.org/releases/lzip/</mirror>
			</file>
			<manualcheck date="20160701" interval="90" page="http://download.savannah.gnu.org/releases/lzip/" />
			<check>
				<page html="http://download.savannah.gnu.org/releases/lzip/">
					<atext linktext="lzip-1.23." />
					<atext linktext="lzip-1.24." />
					<atext linktext="lzip-1.19." />
					<atext linktext="lzip-1.20." />
					<atext linktext="lzip-1.21." />
					<atext linktext="lzip-1.22." />
					<atext linktext="lzip-2." />
					<atext linktext="lzip-3." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
			fi
			./configure --prefix=/usr --sysconfdir=/etc
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				pump make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
