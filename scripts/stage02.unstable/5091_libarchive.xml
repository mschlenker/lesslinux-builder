		<builddeps>
                        <dep>Python3</dep>
                        <dep>acl</dep>
                        <dep>attr</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bzip2</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>distcc</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <!-- <dep>jpegsrc</dep> -->
                        <dep>libxml2</dep>
                        <dep>lzo</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>procps</dep>
                        <dep>sed</dep>
                        <dep>xz</dep>
                        <dep>zlib</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			# export LDFLAGS="-lbz2"
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
				./configure --prefix=/usr --sysconfdir=/etc --disable-static --without-bz2lib
				make -j $jobcount
			else
				./configure --prefix=/usr --sysconfdir=/etc --disable-static --without-bz2lib
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			#paxctl -m ${TGTDIR}/usr/bin/file-roller
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
