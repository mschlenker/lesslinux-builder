	<package 
		name="libarchive"
		version="3.5.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                       
				<pkg sha1="d8694328ff8c53eb48f5980e6eadf50d916e2033">libarchive-3.5.2.tar.gz</pkg>
				<mirror>http://www.libarchive.org/downloads/</mirror>
			</file>
			<manualcheck date="20170615" interval="120" page="http://www.libarchive.org/" />
