<llpackages>
	<package 
		name="libxcb"
		version="1.14"
		class="devel"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>      
				<pkg sha1="e218be6043162d2f758643dbda8caccd53107388">libxcb-1.14.tar.xz</pkg>
				<mirror>http://xcb.freedesktop.org/dist/</mirror>
			</file>
			<manualcheck date="20160701" interval="180" page="http://xcb.freedesktop.org/dist/" />
			<check>
				<page html="http://xcb.freedesktop.org/dist/">
					<atext linktext="libxcb-1.12.1" />
					<atext linktext="libxcb-1.12.2" />
					<atext linktext="libxcb-1.13" />
					<atext linktext="libxcb-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>Python3</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libXau</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxslt</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			  <![CDATA[
			  
			  rm -rf ${PKGNAME}-${PKGVERSION}
			  
			  ]]>
		</clean>
	</package>
</llpackages>
