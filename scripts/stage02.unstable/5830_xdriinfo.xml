<llpackages>
	<package 
		name="xdriinfo"
		version="1.0.5"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                               
				<pkg sha1="0c2c0a369c3a63f28622ddefd84e964c14625f25">xdriinfo-1.0.5.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/app/</mirror>
			</file>
			<manualcheck date="20150601" interval="180" page="ftp://ftp.x.org/pub/individual/app/" />
			<check>
				<page html="ftp://ftp.x.org/pub/individual/app/">
					<atext linktext="xdriinfo-1.0.9." />
					<atext linktext="xdriinfo-1.0.6." />
					<atext linktext="xdriinfo-1.0.7." />
					<atext linktext="xdriinfo-1.0.8." />
					<atext linktext="xdriinfo-1.1." />
					<atext linktext="xdriinfo-1.2." />
					<atext linktext="xdriinfo-1.3." />
					<atext linktext="xdriinfo-2." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>Mesa</dep><dep>glu</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<!-- dep>distcc</dep -->
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			chmod 0755 configure 
			export SHELL=/bin/bash
			  jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc  && make -j $jobcount 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
