<llpackages>
	<package 
		name="libxfce4util"
		version="4.16.0"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                         
				<pkg sha1="67889fcd5cfff9b9c14fd90c2d4e3f3383633fbc">libxfce4util-4.16.0.tar.bz2</pkg>
				<mirror>http://archive.xfce.org/src/xfce/libxfce4util/4.16</mirror>
			</file>
			<manualcheck date="20150529" interval="180" page="http://archive.xfce.org/src/xfce/libxfce4util/" />
			<check>
				<page html="http://archive.xfce.org/src/xfce/libxfce4util/4.12/">
					<atext linktext="4.12.4" />
					<atext linktext="4.12.2" />
					<atext linktext="4.12.3" />
				</page>
				<page html="http://archive.xfce.org/src/xfce/libxfce4util/">
					<atext linktext="4.13" />
					<atext linktext="4.14" />
					<atext linktext="5.0" />
				</page>
			</check>
		</sources>   
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>intltool</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make DESTDIR=${TGTDIR} install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
