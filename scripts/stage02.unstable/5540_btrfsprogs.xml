<llpackages>
	<package 
		name="btrfs-progs"
		version="4.7.3"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>                                                          
			<file>	<!-- git clone git://git.kernel.org/pub/scm/linux/kernel/git/mason/btrfs-progs.git  -->         
				<pkg sha1="55f60cd023f60ee8367acaa52db076f79ccc7608">btrfs-progs-v4.7.3.tar.xz</pkg>
				<mirror>https://www.kernel.org/pub/linux/kernel/people/kdave/btrfs-progs/</mirror>
			</file>
			<manualcheck date="20160701" interval="60" page="http://distfiles.lesslinux.org/" />
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>gzip</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>util-linux-ng</dep>
                        <dep>which</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-v${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<build>
			<![CDATA[ 
			cd ${PKGNAME}-v${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			bash autogen.sh 
			./configure --prefix=/usr --sysconfdir=/etc 
			sed -i 's/ build-Documentation//g' Makefile 
			sed -i 's/ install-Documentation//g' Makefile
			make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			]]>
		</build>
		<install>
			<![CDATA[
			cd ${PKGNAME}-v${PKGVERSION}
			mkdir -p ${TGTDIR}/usr/bin
			mkdir -p ${TGTDIR}/usr/sbin
			make install prefix=/usr DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-v${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
