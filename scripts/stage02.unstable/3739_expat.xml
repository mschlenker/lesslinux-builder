<llpackages>
	<package 
		name="expat"
		version="2.2.0"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>  
				<pkg sha1="8453bc52324be4c796fd38742ec48470eef358b3">expat-2.2.0.tar.bz2</pkg>
				<mirror>http://downloads.sourceforge.net/project/expat/expat/2.2.0/</mirror>
			</file>
			<manualcheck date="20160630" interval="365" page="http://sourceforge.net/projects/expat/files/" />
			<check>
				<page html="http://sourceforge.net/projects/expat/files/">
					<atext linktext="expat-2.2.1." />
					<atext linktext="expat-2.2.2." />
					<atext linktext="expat-2.2.3." />
					<atext linktext="expat-2.3." />
					<atext linktext="expat-2.4." />
					<atext linktext="expat-3." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>bison</dep>
			<dep>bc</dep>
			<dep>libtool</dep>
			<dep>gdbm</dep>
			<dep>gperf</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] && which pump ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
	</package>
</llpackages>
