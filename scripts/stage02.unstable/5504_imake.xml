<llpackages>
	<package 
		name="imake"
		version="1.0.7"
		class="lib"
		install="destdir"
		>
		<license>GPLv2</license>
		<sources>
			<file>                            
				<pkg sha1="52e236776133f217d438622034b8603d201a6ec5">imake-1.0.7.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/util/</mirror>
			</file>
			<manualcheck date="20140802" interval="180" page="http://xorg.freedesktop.org/archive/individual/util/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/util/">
					<atext linktext="imake-1.0.9." />
					<atext linktext="imake-1.0.10." />
					<atext linktext="imake-1.0.11." />
					<atext linktext="imake-1.0.8." />
					<atext linktext="imake-1.1." />
					<atext linktext="imake-1.2." />
					<atext linktext="imake-2." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[ 
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
