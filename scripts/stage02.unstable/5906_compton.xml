<llpackages>
	<package 
		name="compton"
		version="20160705"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                           
				<pkg sha1="4b86efe650cefe76d4dee4060ffc055e076c12f9">compton-20160705.tar.bz2</pkg>
				<mirror>http://distfiles.lesslinux.org/</mirror>
			</file><!-- -cCGbf -->
			<manualcheck date="20160701" interval="120" page="http://distfiles.lesslinux.org/" />
		</sources>
		<builddeps>
                        <dep>Mesa</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>compositeproto</dep>
                        <dep>coreutils</dep>
                        <dep>dbus</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>libX11</dep>
                        <dep>libXcomposite</dep>
                        <dep>libXdamage</dep>
                        <dep>libXext</dep>
                        <dep>libXfixes</dep>
                        <dep>libXrandr</dep>
                        <dep>libXrender</dep>
                        <dep>libconfig</dep>
                        <dep>libdrm</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pcre</dep>
                        <dep>pkg-config</dep>
                        <dep>xproto-base</dep>
			<dep>cmake</dep>
			<dep>gcc49</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			make -j $jobcount
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			mkdir -p ${TGTDIR}/usr/bin
			install -m 0755 ${PKGNAME}/compton ${TGTDIR}/usr/bin
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}
			]]>
		</clean>
	</package>
</llpackages>
