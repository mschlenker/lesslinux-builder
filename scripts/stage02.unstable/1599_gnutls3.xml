                        <dep>util-linux-ng</dep>
                        <dep>which</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/gnutls-${PKGVERSION}.tar.xz | tar xf - 
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd gnutls-${PKGVERSION}
			# ./configure --sysconfdir=/etc/compat.new --prefix=/usr/compat.new && make
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --with-included-libtasn1 --prefix=/usr  CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --with-included-libtasn1 --prefix=/usr
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd gnutls-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf gnutls-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
