<llpackages>
	<package 
		name="libXrender"
		version="0.9.10"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>        
				<pkg sha1="d55106de9260c2377c19d271d9b677744a6c7e81">libXrender-0.9.10.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/lib/</mirror>
			</file>
			<manualcheck date="20170610" interval="180" page="http://xorg.freedesktop.org/archive/individual/lib/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/lib/">
					<atext linktext="libXrender-0.9.11.tar.bz2" />
					<atext linktext="libXrender-0.9.12.tar.bz2" />
					<atext linktext="libXrender-0.10.tar.bz2" />
					<atext linktext="libXrender-0.10.0.tar.bz2" />
					<atext linktext="libXrender-0.10.1.tar.bz2" />
					<atext linktext="libXrender-1.0.tar.bz2" />
					<atext linktext="libXrender-1.0.0.tar.bz2" />
					<atext linktext="libXrender-1.0.1.tar.bz2" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
