<llpackages>
	<package 
		name="rsync"
		version="3.1.0"
		class="user"
		install="destdir"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                                                             
				<pkg sha1="eb58ab04bcb6293da76b83f58327c038b23fcba3">rsync-3.1.0.tar.gz</pkg>
				<mirror>http://samba.anu.edu.au/ftp/rsync/src/</mirror>
			</file>
			<manualcheck date="20140221" interval="180" page="http://samba.anu.edu.au/ftp/rsync/src/" />
			<check>
				<page html="http://samba.anu.edu.au/ftp/rsync/src/">
					<atext linktext="rsync-3.1.1." />
					<atext linktext="rsync-3.1.2." />
					<atext linktext="rsync-3.1.3." />
					<atext linktext="rsync-3.2." />
					<atext linktext="rsync-3.3." />
					<atext linktext="rsync-4." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<!-- soft -->
			<dep>attr</dep>
			<dep>popt</dep>
			<dep>acl</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr --docdir=/usr/doc/${PKGNAME}-${PKGVERSION} --disable-acl-support   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr --docdir=/usr/doc/${PKGNAME}-${PKGVERSION} --disable-acl-support 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
