			<![CDATA[

			cd ${PKGNAME}-${PKGVERSION}
			# sed -i -e '/gets is a/d' gnu/stdio.in.h

			]]>
		</patch> -->
		<build>
			<![CDATA[ 
			export FORCE_UNSAFE_CONFIGURE=1
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/tools 
			JOBCOUNT=` grep -c  processor /proc/cpuinfo ` 
			make -j${JOBCOUNT}
			]]>
		</build>
		<install>
			<![CDATA[
			export FORCE_UNSAFE_CONFIGURE=1
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
